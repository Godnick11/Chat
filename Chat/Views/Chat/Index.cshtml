@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = "Chat";
}

@section Scripts
{
    @Scripts.Render("~/bundles/signalr")
    <script src="~/signalr/hubs"></script>
    @Scripts.Render("~/bundles/chat")
}

@section Header
{
    @Html.Partial("NavigationBar")
}

<div class="row">
    <div class="span8">
        <form class="form-inline">
            <input id="msg" type="text" />
            <input id="broadcast" type="button" class="btn btn-success" value="Send" />
        </form>
    </div>
</div>

<div class="row">
    <div class="span8">
        <ul id="messages"></ul>
    </div>
</div>
